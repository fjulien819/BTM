{% set formSearch = form_search.getForm().createView() %}

{{ form_start(formSearch) }}
	<div class="input-group bg-transparent">
		{{ form_widget(formSearch.searchTerm, {'attr': {'class': 'form-control border-white bg-white', 'placeholder': 'Rechercher sur le blog'}}) }}
		<div class="input-group-prepend">
			<button type="submit" class="btn btn-link"><i class="fas fa-search text-secondary"></i></button>
		</div>
	</div>
{{ form_end(formSearch) }}
