
{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<!DOCTYPE html>
<html lang="fr">

<head>
    <title>Back to Mobile - Acces blog</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.0/css/all.css" integrity="sha384-aOkxzJ5uQz7WBObEZcHvV5JvRW3TUc2rNPA7pe3AwnsUohiw1Vj2Rgx2KSOkF5+h"
      crossorigin="anonymous">

    {{ encore_entry_link_tags('fonts') }}
    {{ encore_entry_link_tags('login_content') }}

    <link rel="icon" href="../../../../assets/img/favicon.png" type="image/png">
</head>



<body>

  <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin col-md-5 mx-auto">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}


    <!-- Close button -->
    <div class="row d-flex flex-row-reverse" style="margin-bottom: 0.6rem;">
      <a class="close" href="{{ path('homepage') }}">
        <span class="closebutton" alt="bouton_fermer" aria-hidden="true">&times;</span>
      </a>
    </div>

    <!-- Title -->
    <div class="row">
      <div class="col-4 lineleft">
        <hr style="height: 0.0625rem">
      </div>
      <div class="col-4 connextext">
        <h1 class="font-weight-normal text-center">Connexion</h1>
      </div>
      <div class="col-4 lineright">
        <hr style="height: 0.0625rem">
      </div>
    </div>

    <!-- Username -->
    <div class="form-group" style="margin-top: 3.125rem">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />   
    </div>

    <!-- Password -->
    <div class="form-group">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" class="form-control" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>

    <!-- Submit button. Changer le texte pour "Se connecter" dans les trans -->
    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-lg btn-block text-uppercase" style="margin-top: 2.5rem; margin-bottom: 1.875rem"/>

    <!-- Remember me -->
    <div class="checkbox mb-3 form-check">
        <label class="d-flex align-items-center" for="remember_me" {{ 'security.login.remember_me'|trans }}>
            <input type="checkbox" value="remember-me" name="_remember_me" value="on" style="margin-right: 0.625rem;"> Se souvenir de moi
        </label>
    </div>

    <!-- Forgotten password -->
    <div class="col-12 identiforgot" style="text-align: right">
        <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli&eacute;&#63;</a>
    </div>

</form>



  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>

</html>


