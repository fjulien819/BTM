<div class=" col-8">

    {% if posts.getTotalItemCount %}

        {% for post in posts %}

            <div class="card card-post mb-4 rounded-0 bg-transparent d-flex flex-lg-row " style="height: auto;">
                <img class="blog-img-list img-fluid" src="https://picsum.photos/500/500/?random" alt="{{ post.title }}">
                <div class="card-body p-3">
                    <div>
                        <h2 class="card-title">{{ post.title }}</h2>
                        <h6 class="card-subtitle pb-1 text-muted">Publi√©
                            le {{ post.createdAt|localizeddate('none', 'none', null, null, 'd MMMM Y') }}
                            par {{ post.author }} pour Back To
                            Mobile{% for category in post.category %}, {{ category.name }}{% endfor %}</h6>
                    </div>
                    <div class="bg-white p-3">
                        <p class="card-text">{{ post.content|striptags|trim|truncate(250, true, '...') }}
                        </p>
                        <div class="text-right">
                            <a class="btn blog-button rounded-0"
                               href="{{ path('post',{'url_page_post': 'blog', 'slug': post.slug}) }}" role="button">Lire
                                la suite...</a>
                        </div>
                    </div>

                </div>
            </div>



        {% endfor %}

    {% else %}

        Aucun post

    {% endif %}

    <!--- Pagination -->
    <div class="d-flex justify-content-end">
        {{ knp_pagination_render(posts) }}
    </div>


</div>
