<div class="col-9 border  border-primary">
    {% if posts.getTotalItemCount %}

        {% for post in posts %}

            <div class="media mt-3 bg-white">
                <!---- <img class="media-left p-3 blog-img-list" src="{{ asset('uploads/images/post/') }}{{ post.image }} " alt="{{ post.title }}"> --->
                 <img class="media-left p-3 blog-img-list img-fluid" src="https://picsum.photos/600/600/?random" alt="{{ post.title }}">
                <div class="media-body p-2">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Publi√© le {{ post.createdAt|localizeddate('none', 'none', null, null, 'd MMMM Y') }} par {{ post.author }} pour Back To Mobile{% for category in post.category %}, {{ category.name }}{% endfor %}</h6>
                    <p class="card-text">{{ post.content|striptags|trim|truncate(304, true, '...') }}</p>
                    <a class="btn btn-secondary rounded-0 float-right" href="{{ path('post',{'url_page_post': 'blog', 'slug': post.slug}) }}" role="button">Lire la suite...</a>
                </div>
            </div>


        {% endfor %}

    {% else %}

        Aucun post

    {% endif %}

    {{ dump(posts) }}
    <!--- Pagination -->
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(posts) }}
        </div>


</div>
