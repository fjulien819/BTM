

        <!-- Post Content Column -->
        <div class="post-container col-12 col-lg-8 col-xl-9">

            <div class="d-none d-xl-flex mt-2 justify-content-between cubeline">

                <a class="btn btn-link text-dark mt-4" href="{{ path('posts', {'url_page_post': 'blog'})}}" role="button"><i class="fas fa-arrow-left"></i> Retour Accueil Blog</a>

                <!-- color cube -->
                <div class="" style="width: 200px; right: 15px">
                    <div class="d-flex justify-content-between align-items-center">
                        <div style="background-color:#73f5a7; width: 50px; height: 50px"></div>
                        <div style="background-color: #fe8b84; width: 100px; height: 100px"></div>
                    </div>
                    <div class="d-flex justify-content-end align-items-center">
                        <div class="d-flex justify-content-center align-items-end" style=" width: 100px; height: 100px">
                            <div style="background-color:#9d453d; width: 50px; height: 50px"></div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Title -->
            <h2 class="col-sm-12 col-md-8 offset-md-2 pt-3 text-center">{{ post.title }}</h2>

            <!-- Author -->
            <p class="lead pb-2 text-center">
                Publi√© le {{ post.createdAt|localizeddate('none', 'none', null, null, 'd MMMM Y') }} par {{ post.author }} pour Back To Mobile{% for category in post.category %}, {{ category.name }}{% endfor %}
            </p>

            <!-- Preview Image -->
            <img class="img-fluid pr-0 pl-0 pt-2 pb-2 col-12 col-md-5 col-xl-3 float-right" src="/uploads/images/post{{ asset(post.image) }}" alt="Illustration {{ post.title }}" style="max-height: 200px">


            <!-- Post Content -->
            <div class="mt-3">
                {{ post.content|raw  }}
            </div>

        </div>




